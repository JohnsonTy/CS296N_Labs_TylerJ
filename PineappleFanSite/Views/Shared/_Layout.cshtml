<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Pineapple Fan Site</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .navbar-nav > li {
            margin-right: 10px;
        }
        body {
            padding-top: 56px;
        }
        .navbar-nav > li > a {
            color: #FFFFFF;
        }
    </style>
    <script src="/js/modernizr-2.8.3.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <a class="navbar-brand" href="#">Pineapple Fan Site</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">@Html.ActionLink("Home", "Index", "Home")</li>
                <li class="nav-item">@Html.ActionLink("Register", "Index", "Register")</li>
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">@Html.ActionLink("Logout", "Logout", "Register")</li>
                }
                else
                {
                    <li class="nav-item">@Html.ActionLink("Login", "Login", "Register")</li>
                }
                <li class="nav-item">@Html.ActionLink("About", "About", "Home")</li>
                <li class="nav-item">@Html.ActionLink("Contact", "Contact", "Home")</li>
                <li class="nav-item">@Html.ActionLink("History", "History", "Home")</li>
                <li class="nav-item">@Html.ActionLink("Fan-Sites", "FanSites", "Sources")</li>
                <li class="nav-item">@Html.ActionLink("Quiz", "Index", "Quiz")</li>
                <li class="nav-item">@Html.ActionLink("Sources", "Index", "Sources")</li>
                <li class="nav-item">@Html.ActionLink("News", "News", "Sources")</li>
                <li class="nav-item">@Html.ActionLink("Projects", "Index", "Projects")</li>
            </ul>
        </div>
    </nav>

    <div class="container mt-5">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Pineapple Fan Site</p>
        </footer>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>